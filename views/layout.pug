if !pageturn  
  doctype html
  html
    head
      title= title
      link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous")
      link(rel='stylesheet', href='/stylesheets/style.css')
      meta(name="theme-color" content="#0069ca")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
        
      block head
    body
      ul#navigation
        if userid
          if login == 'admin'
            li(class=activePage=='info' ? "nav-active" : "")
              a(href='/adminpanel') Информация
            li(class=activePage=='students' ? "nav-active" : "")
              a(href='/student') Студенты
            li(class=activePage=='types' ? "nav-active" : "")
              a(href='/types') Типы документов
            li(class=activePage=='requests' ? "nav-active" : "")
              a(href='/auth/requests') Заявки на регистрацию
          else 
            li(class=activePage=='search' ? "nav-active" : "")
              a(href='/search/') Поиск
        li(class=activePage=='account' ? "nav-active" : "")
          a(href='/auth/') Аккаунт
      block content
else 
  block content
